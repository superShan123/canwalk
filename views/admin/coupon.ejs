<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
</head>
<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
            display: flex;
            min-height: 100vh;
            flex-direction: row;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
        }

        .sidebar h1 {
            font-size: 1.8rem;
            margin-bottom: 30px;
            text-align: center;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            margin-bottom: 20px;
        }

        .sidebar ul li a {
            color: #ecf0f1;
            text-decoration: none;
            font-size: 1.1rem;
            padding: 10px;
            display: block;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .sidebar ul li a.active,
        .sidebar ul li a:hover {
            background-color: #3498db;
        }

        /* Main Content */
        .main-content {
            margin-left: 270px;
            padding: 20px;
            width: calc(100% - 270px);
            height: 100vh;
            overflow-y: auto;
        }

        /* Table Container */
        table {
            margin: 20px auto;
            margin-left: 200px; /* Increased margin-left to move it further to the right */
            width: calc(100% - 500px); /* Increased width for a more prominent table */
            max-width: 1200px; /* Prevents table from being too wide */
            border-collapse: collapse;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        table thead tr {
            background-color: #34495e;
            color: #ecf0f1;
        }

        table thead th, table tbody td {
            padding: 15px;
            text-align: center;
            border: 1px solid #ddd;
        }

        table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table tbody tr:hover {
            background-color: #f7f7f7;
        }

        select {
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
            cursor: pointer;
        } */

         button {
            padding: 5px 10px;
            background-color: #2ecc71;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #27ae60;
        }

        a {
            color: #3498db;
            text-decoration: none;
            margin-right: 10px;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Flexbox for Layout */
        .main-container {
            display: flex;
            width: 100%;
        }

        .return-form {
            margin-top: 10px;
            background-color: #f9f9f9;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .return-form label,
        .return-form select,
        .return-form textarea {
            display: block;
            margin-bottom: 10px;
            width: 100%;
        }

        .return-form textarea {
            resize: vertical;
            height: 80px;
        }

        .hidden {
    display: none;
}

.add-coupon-btn {
    display: block; /* Makes the button take a new line */
    margin-top: 450px; /* Centers it horizontally and moves it down */
    margin-left:auto;
    margin-right:350px;
    padding: 10px 20px; /* Adjusts padding for better look */
    background-color: #3498db; /* Blue background */
    color: #fff; /* White text */
    font-size: 12px; /* Makes the font larger */
    border: none; /* Removes the border */
    border-radius: 5px; /* Gives rounded corners */
    cursor: pointer; /* Changes cursor to pointer on hover */
    text-align: center; /* Aligns the text in the button */
    transition: background-color 0.3s ease; /* Adds a hover effect */
}

.add-coupon-btn:hover {
    background-color: #2980b9; /* Darker blue on hover */
}

</style>
<body>

    <div class="main-container">
        <div class="sidebar">
            <h1>Admin Panel</h1>
            <ul>
                <li><a href="/admin/dashboard">Dashboard</a></li>
                <li><a href="/admin/customers">Customers</a></li>
                <li><a href="/admin/product">Products</a></li>
                <li><a href="/admin/categories">Categories</a></li>
                <li><a href="/admin/order">Orders</a></li>
                <li><a href="/admin/coupon" class="active">Coupons</a></li>
                <li><a href="/admin/sales-report">Sales</a></li>
                <li><a href="/admin/offer">Offers</a></li>
            </ul>
        </div>
    
        <div class="main-content">
            <h2>Coupon List</h2>
            <table>
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Discount</th>
                        <th>Type</th>
                        <th>Min Amount</th>
                        <th>Max Amount</th>
                        <th>User Limit</th>
                        <th>Expiry Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (coupons.length > 0) { %>
                        <% coupons.forEach((coupon) => { %>
                        <tr>
                            <td><%= coupon.code %></td>
                            <td><%= coupon.discount %></td>
                            <td><%= coupon.discountType %></td>
                            <td><%= coupon.minAmount %></td>
                            <td><%= coupon.maxAmount %></td>
                            <td><%= coupon.userLimit %></td>
                            <td><%= coupon.expiryDate.toISOString().split('T')[0] %></td>
                            <td>
                                <form action="/admin/coupon-delete" method="POST" style="display:inline;">
                                    <input type="hidden" name="couponId" value="<%= coupon._id %>">
                                    <button type="submit" class="btn-delete">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    
    <a href='/admin/coupon-add'>
        <button class="add-coupon-btn">Add Coupon</button>
    </a>
   
</html>