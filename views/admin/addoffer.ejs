<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Offer</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f9fafc;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: #34495e;
        }

        .container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 1.8rem;
            color: #2c3e50;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #7f8c8d;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 10px;
            border: 1px solid #dcdcdc;
            border-radius: 5px;
            font-size: 1rem;
            color: #34495e;
        }

        .form-group input:focus,
        .form-group select:focus {
            border-color: #3498db;
            outline: none;
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.5);
        }

        button {
            width: 100%;
            background-color: #3498db;
            color: #ffffff;
            border: none;
            padding: 12px;
            font-size: 1rem;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #2980b9;
        }

        select[multiple] {
            height: 100px;
        }

        .error {
            color: red;
            font-size: 0.9rem;
        }


    </style>
</head>
<body>
    <div class="container">
        <h1>Add New Offer</h1>
        <form id="offerForm" action="/admin/add-offer" method="POST" novalidate>
            <div class="form-group">
                <label>Category:</label>
                <input type="text" id="category" name="category" required>
                <span id="categoryError" class="error"></span>
            </div>
            <div class="form-group">
                <label>Discount Type:</label>
                <select id="discountType" name="discountType" required>
                    <option value="percentage">Percentage</option>
                    <option value="fixed">Fixed Amount</option>
                </select>
                <span id="discountTypeError" class="error"></span>
            </div>
            <div class="form-group">
                <label>Discount Value:</label>
                <input type="number" id="discountValue" name="discountValue" min="0" required>
                <span id="discountValueError" class="error"></span>
            </div>
            <div class="form-group">
                <label>Expiry Date:</label>
                <input type="date" id="expiryDate" name="expiryDate" required>
                <span id="expiryDateError" class="error"></span>
            </div>
            <div class="form-group">
                <label>Applicable Products:</label>
                <select id="applicableProducts" name="applicableProducts" multiple required>
                    <% products.forEach(product => { %>
                        <option value="<%= product._id %>"><%= product.name %></option>
                    <% }) %>
                </select>
                <span id="applicableProductsError" class="error"></span>
            </div>  
            <button type="submit">Add Offer</button>
        </form>
    </div>

    <script>
        document.getElementById("offerForm").addEventListener("submit", function (event) {
            let valid = true;

            // Validate Category
            const category = document.getElementById("category").value.trim();
            const categoryRegex = /^[A-Z][a-zA-Z0-9]*$/;
            if (!categoryRegex.test(category)) {
                valid = false;
                document.getElementById("categoryError").textContent = 
                    "Category must start with a capital letter and contain no spaces.";
            } else {
                document.getElementById("categoryError").textContent = "";
            }

            // Validate Discount Value
            const discountValue = parseFloat(document.getElementById("discountValue").value);
            if (isNaN(discountValue) || discountValue <= 0) {
                valid = false;
                document.getElementById("discountValueError").textContent = 
                    "Discount value must be a positive number.";
            } else {
                document.getElementById("discountValueError").textContent = "";
            }

            // Validate Expiry Date
            const expiryDate = document.getElementById("expiryDate").value;
            const currentDate = new Date().toISOString().split("T")[0];
            if (!expiryDate || expiryDate < currentDate) {
                valid = false;
                document.getElementById("expiryDateError").textContent = 
                    "Expiry date must be in the future.";
            } else {
                document.getElementById("expiryDateError").textContent = "";
            }

            // Validate Applicable Products
            const applicableProducts = document.getElementById("applicableProducts").selectedOptions;
            if (applicableProducts.length === 0) {
                valid = false;
                document.getElementById("applicableProductsError").textContent = 
                    "Please select at least one product.";
            } else {
                document.getElementById("applicableProductsError").textContent = "";
            }

            // Prevent form submission if validation fails
            if (!valid) {
                event.preventDefault();
            }
        });

